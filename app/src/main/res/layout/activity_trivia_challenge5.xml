<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TriviaChallengeActivity5">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/questionTextView"
            android:background="@drawable/rounded_rectangle_background4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Q1. Lorem Ispum I am a good boy but you are a nice one?"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:padding="10dp"
            android:gravity="start|center"
            android:fontFamily="@font/bariol_bold"
            android:textColor="#171717"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/rounded_rectangle_background3"
            android:id="@+id/ansTextView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1. Answer One"
            android:layout_margin="10dp"
            android:textSize="26sp"
            android:paddingStart="10dp"
            android:paddingEnd="7dp"
            android:gravity="start|center"
            android:fontFamily="@font/bariolregular"
            android:textColor="#171717"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/rounded_rectangle_background3"
            android:id="@+id/ansTextView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2. Answer Two"
            android:layout_margin="10dp"
            android:textSize="26sp"
            android:paddingStart="10dp"
            android:paddingEnd="7dp"
            android:gravity="start|center"
            android:fontFamily="@font/bariolregular"
            android:textColor="#171717"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/rounded_rectangle_background3"
            android:id="@+id/ansTextView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3. Answer Three"
            android:layout_margin="10dp"
            android:textSize="26sp"
            android:paddingStart="10dp"
            android:paddingEnd="7dp"
            android:gravity="start|center"
            android:fontFamily="@font/bariolregular"
            android:textColor="#171717"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/rounded_rectangle_background3"
            android:id="@+id/ansTextView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4. Answer Four"
            android:layout_margin="10dp"
            android:textSize="26sp"
            android:paddingStart="10dp"
            android:paddingEnd="7dp"
            android:gravity="start|center"
            android:fontFamily="@font/bariolregular"
            android:textColor="#171717"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_bold"
            android:text="Submit"
            android:backgroundTint="#007DB6"
            android:id="@+id/submitBtn"/>

    </LinearLayout>


</LinearLayout>