<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@drawable/letter"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<!--        TO be deleted textview-->

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                android:id="@+id/stars1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_rawRes="@raw/stars3"/>
            
    <TextView
        android:fontFamily="@font/psb"
        android:textSize="43sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is"
        android:id="@+id/text1"/>


            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginStart="8dp"
                android:visibility="invisible"
                android:id="@+id/stars2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_rawRes="@raw/stars3"/>

        </LinearLayout>

    <TextView
        android:layout_marginBottom="-25dp"
        android:visibility="invisible"
        android:fontFamily="@font/psb"
        android:textSize="43sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Something..."
        android:id="@+id/text2"/>

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="invisible"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:id="@+id/firstlottie"
        app:lottie_autoPlay="true"
        app:lottie_repeatCount="0"
        app:lottie_rawRes="@raw/first"
        />

    <TextView
        android:layout_marginTop="-25dp"
        android:visibility="invisible"
        android:fontFamily="@font/psb"
        android:textSize="43sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For You!"
        android:id="@+id/text3"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/huglottie"
            android:visibility="gone"
            app:lottie_rawRes="@raw/hug"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_rawRes="@raw/clickhere2"
            android:scaleType="centerCrop"
            android:id="@+id/clickherelottie"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/clickheretext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Click Here"
            android:visibility="gone"
            android:textSize="12dp"/>
    </LinearLayout>


</LinearLayout>