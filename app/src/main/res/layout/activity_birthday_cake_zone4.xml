<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#06081E"
    tools:context=".BirthdayCakeZoneActivity4">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mainLottie"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/night"
        app:lottie_autoPlay="true"/>

    <TextView
        android:background="@drawable/rounded_rectangle_background"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="7dp"
        android:paddingEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cut, Eat, Repeat :)"
        android:id="@+id/textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bariol_bold"
        android:textSize="40sp"
        android:textColor="@color/black"/>

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_speed="0.6"
        android:id="@+id/caketobecut"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/caketobecut" />

    <TextView
        android:background="@drawable/rounded_rectangle_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/instructionTextView"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:fontFamily="@font/bariol_bold"
        android:layout_below="@+id/caketobecut"
        android:textColor="#0C0C0C"/>

    <TextView
        android:background="@drawable/rounded_rectangle_background"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textColor="#0C0C0C"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bariol_bold"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/quotesTextView"
        android:textSize="28sp"/>


    <com.airbnb.lottie.LottieAnimationView
        app:lottie_speed="0.6"
        android:id="@+id/thankyoulottie"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/thankyou" />

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_speed="2.3"
        android:visibility="gone"
        android:id="@+id/cake"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/cake" />

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/cakeeating"
        android:layout_width="match_parent"
        app:lottie_speed="1.6"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        app:lottie_repeatCount="2"
        app:lottie_rawRes="@raw/cakeeating" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/knife"
        app:lottie_repeatCount="2"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:lottie_rawRes="@raw/knife"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0B0B0B"
        android:textColor="@color/white"
        android:fontFamily="@font/bariol_bold"
        android:text="Zen Mode ~"
        app:cornerRadius="8dp"
        android:elevation="9dp"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="17dp"
        android:id="@+id/zenmodebutton"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:backgroundTint="#0B0B0B"
        android:textColor="@color/white"
        android:fontFamily="@font/bariol_bold"
        android:text="Back"
        app:cornerRadius="8dp"
        android:elevation="9dp"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="17dp"
        android:id="@+id/backbutton"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0B0B0B"
        android:textColor="@color/white"
        android:fontFamily="@font/bariol_bold"
        android:visibility="invisible"
        android:text="Repeat"
        app:cornerRadius="8dp"
        android:elevation="9dp"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="17dp"
        android:id="@+id/repeatbutton"/>

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_repeatCount="2"
        android:id="@+id/exitlottie"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="gone"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F3F3F3"
        android:visibility="gone"
        android:textSize="17sp"
        android:id="@+id/changeMusicTextView"
        android:text="Change Music"
        android:fontFamily="@font/bariol_bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>